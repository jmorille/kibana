{
  "target-url":"https://localhost",
  "send-access-token": true,
  "bind-address":"0.0.0.0",
  "http-port":"3001",
  "applications":[
    {
      "base-path":"/",
      "adapter-config":{
        "realm":"dory",
        "auth-server-url":"http://localhost:8080/auth",
        "ssl-required":"external",
        "resource":"kibana-app",
        "public-client": true,
        "use-resource-role-mappings": true
      },
      "constraints":[
        {
          "pattern":"/*",
          "roles-allowed":[
            "kibana"
          ]
        }
      ]
    }
  ]
}